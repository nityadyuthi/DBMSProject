<%- include("../partials/header.ejs") -%>
<form action="/orders/create" method="POST">
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="id">
        <h3>Customer ID</h3>
      </label>
      <input type="text" class="form-control" id="id" name="id" />
    </div>
  </div>
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="date"><h3>Date and Time of Order</h3></label>
      <input type="datetime-local" class="form-control" id="date" name="date" />
    </div>
  </div>
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="price"><h3>Total Price</h3></label>
      <input type="number" class="form-control" id="price" name="price" />
    </div>
  </div>
  <button type="submit" class="padding btn btn-lg btn-primary">Go!</button>
</form>
<%- include("../partials/footer.ejs") -%>
