<%- include("partials/header") -%>
<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title Of Post</label><br>
        <input class="form-control" type="text" name="postTitle" id="postTitle"><br>
        <label for="postBody">Body Of Post</label><br>
        <textarea class="form-control" name="postBody" id="postBody" cols="30" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") -%>