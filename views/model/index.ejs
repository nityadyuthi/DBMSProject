<%- include("../partials/header") -%>
<h1>The Model Table:</h1>
<table class="styled-table">
  <thead>
    <tr>
      <th>Model ID</th>
      <th>Model Name</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach(row => { %>
    <tr>
      <td><%= row.ModelID %></td>
      <td><%= row.ModelName %></td>
    </tr>
    <% }); %>
  </tbody>
</table>
<h1>Do you want to:</h1>
<div class="row padding list-group">
  <a
    href="../model/create"
    class="col-sm-3 padding-sm list-group-item list-group-item-info-sm"
    >Create a record</a
  >
  <a
    href="../model/update"
    class="col-sm-3 padding-sm list-group-item list-group-item-action list-group-item-info-sm"
    >Update a record</a
  >
  <a
    href="../model/delete"
    class="col-sm-3 padding-sm list-group-item list-group-item-action list-group-item-info-sm"
    >Delete a record</a
  >
</div>

<%- include("../partials/footer") -%>
