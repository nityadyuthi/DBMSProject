<%- include("../partials/header.ejs") -%>
<form action="/customer/create" method="POST">
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="id">
        <h3>Customer ID</h3>
      </label>
      <input type="text" class="form-control" id="id" name="id" />
    </div>
  </div>
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="Name">
        <h3>Name</h3>
      </label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
  </div>
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="address">
        <h3>Address</h3>
      </label>
      <input type="text" class="form-control" id="address" name="address" />
    </div>
  </div>
  <div class="padding row form-group">
    <div class="col-md-4">
      <label for="phone">
        <h3>Phone Number</h3>
      </label>
      <input type="number" class="form-control" id="phone" name="phone" />
    </div>
  </div>
  <button type="submit" class="padding btn btn-lg btn-primary">Go!</button>
</form>
<%- include("../partials/footer.ejs") -%>